{
    "name": "gmt-web-app",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "testEnvironment": "jsdom",
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^6.5.1",
        "@fortawesome/free-solid-svg-icons": "^6.5.1",
        "@fortawesome/react-fontawesome": "^0.2.0",
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.68",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.17",
        "axios": "^1.6.2",
        "nth-check": "^2.1.1",
        "postcss": "^8.4.32",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.21.0",
        "react-scripts": "^5.0.1",
        "resolve-url-loader": "^5.0.0",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "npm run generate-proto && react-scripts start",
        "build": "npm run generate-proto && react-scripts build",
        "test": "npm run generate-proto && react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier . --write",
        "format:check": "prettier .",
        "generate-proto": "npx pbjs -t static-module -w commonjs -o ./src/proto.js ../gmt-protobuf/messages.proto && npx pbts -o ./src/proto.d.ts ./src/proto.js"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "overrides": {
        "@svgr/webpack": "^8.1.0",
        "typescript": "^5.3.3"
    },
    "jest": {
        "moduleNameMapper": {
            "axios": "axios/dist/node/axios.cjs"
        }
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jest": "^27.6.0",
        "eslint-plugin-prettier": "^5.0.1",
        "prettier": "^3.1.1",
        "protobufjs-cli": "^1.1.2",
        "tailwindcss": "^3.3.6",
        "typescript": "^5.3.3"
    }
}
